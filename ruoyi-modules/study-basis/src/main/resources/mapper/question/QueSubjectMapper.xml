<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.question.mapper.QueSubjectMapper">

  <delete id="deleteQueSubjectById" parameterType="Long">
        delete from que_subject where subject_id = #{subjectId}
    </delete>

  <delete id="deleteQueSubjectByIds" parameterType="String">
    delete from que_subject where subject_id in
    <foreach close=")" collection="array" item="subjectId" open="(" separator=",">
      #{subjectId}
    </foreach>
  </delete>

  <insert id="insertQueSubject" keyProperty="subjectId" parameterType="QueSubject"
    useGeneratedKeys="true">
    insert into que_subject
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="subjectName != null">subject_name,</if>
      <if test="subjectDetail != null">subject_detail,</if>
      <if test="occupation != null">occupation,</if>
      <if test="deleteStatus != null">delete_status,</if>
      <if test="createTime != null">create_time,</if>
      <if test="updateTime != null">update_time,</if>
      <if test="version != null">version,</if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="subjectName != null">#{subjectName},</if>
      <if test="subjectDetail != null">#{subjectDetail},</if>
      <if test="occupation != null">#{occupation},</if>
      <if test="deleteStatus != null">#{deleteStatus},</if>
      <if test="createTime != null">#{createTime},</if>
      <if test="updateTime != null">#{updateTime},</if>
      <if test="version != null">#{version},</if>
    </trim>
  </insert>

  <resultMap id="QueSubjectResult" type="QueSubject">
    <result column="subject_id" property="subjectId"/>
    <result column="subject_name" property="subjectName"/>
    <result column="subject_detail" property="subjectDetail"/>
    <result column="occupation" property="occupation"/>
    <result column="delete_status" property="deleteStatus"/>
    <result column="create_time" property="createTime"/>
    <result column="update_time" property="updateTime"/>
    <result column="version" property="version"/>
  </resultMap>

  <select id="selectQueSubjectById" parameterType="Long" resultMap="QueSubjectResult">
    <include refid="selectQueSubjectVo"/>
    where subject_id = #{subjectId}
  </select>

  <select id="selectQueSubjectList" parameterType="QueSubject" resultMap="QueSubjectResult">
    <include refid="selectQueSubjectVo"/>
    <where>
      <if test="subjectName != null  and subjectName != ''">and subject_name like concat('%',
        #{subjectName}, '%')
      </if>
    </where>
  </select>

  <sql id="selectQueSubjectVo">
        select subject_id, subject_name, subject_detail, occupation, delete_status, create_time, update_time, version from que_subject
    </sql>

  <update id="updateQueSubject" parameterType="QueSubject">
    update que_subject
    <trim prefix="SET" suffixOverrides=",">
      <if test="subjectName != null">subject_name = #{subjectName},</if>
      <if test="subjectDetail != null">subject_detail = #{subjectDetail},</if>
      <if test="occupation != null">occupation = #{occupation},</if>
      <if test="deleteStatus != null">delete_status = #{deleteStatus},</if>
      <if test="createTime != null">create_time = #{createTime},</if>
      <if test="updateTime != null">update_time = #{updateTime},</if>
      <if test="version != null">version = #{version},</if>
    </trim>
    where subject_id = #{subjectId}
  </update>
</mapper>